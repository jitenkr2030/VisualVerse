{
  "id": "math-verse",
  "name": "MathVerse",
  "code": "MathVerse",
  "version": "1.0.0",
  "description": "Mathematical visualization platform covering algebra, calculus, linear algebra, probability, and proof visualization with step-wise problem decomposition",
  "engine_version": "1.0.0",
