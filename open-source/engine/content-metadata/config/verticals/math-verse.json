  "visualization_types": {
    "equation-layout": {
      "id": "equation-layout",
      "name": "Equation Layout",
      "description": "Interactive mathematical equation display with step-by-step solving",
      "category": "diagram",
      "renderer": "math-equation",
      "input_schema": {
        "type": "object",
        "properties": {
          "equation": {"type": "string"},
          "steps": {"type": "array"},
          "highlighted_terms": {"type": "array"}
        }
      },
      "output_format": "svg",
      "capabilities": ["interactive", "accessible", "responsive"]
    },
    "parabola-animation": {
      "id": "parabola-animation",
      "name": "Parabola Animation",
      "description": "Animated visualization of quadratic functions and their properties",
      "category": "animation",
      "renderer": "math-graph",
      "output_format": "canvas",
      "capabilities": ["animated", "interactive", "responsive"]
    },
    "proof-step": {
      "id": "proof-step",
      "name": "Proof Step Visualization",
      "description": "Step-by-step visualization of mathematical proofs",
      "category": "diagram",
      "renderer": "proof-display",
      "output_format": "svg",
      "capabilities": ["interactive", "accessible"]
    },
    "graph-function": {
      "id": "graph-function",
      "name": "Function Graphing",
      "description": "Dynamic graphing of mathematical functions",
      "category": "chart",
      "renderer": "math-graph",
      "input_schema": {
        "type": "object",
        "properties": {
          "functions": {"type": "array"},
          "domain": {"type": "array"},
          "range": {"type": "array"}
        }
      },
      "output_format": "canvas",
      "capabilities": ["animated", "interactive", "responsive"]
    },
    "matrix-transformation": {
      "id": "matrix-transformation",
      "name": "Matrix Transformation",
      "description": "Visualization of linear transformations represented by matrices",
      "category": "animation",
      "renderer": "matrix-viz",
      "output_format": "webgl",
      "capabilities": ["animated", "interactive", "3d"]
    },
    "riemann-sum": {
      "id": "riemann-sum",
      "name": "Riemann Sum Visualization",
      "description": "Animated approximation of definite integrals using Riemann sums",
      "category": "animation",
      "renderer": "integral-viz",
      "output_format": "canvas",
      "capabilities": ["animated", "interactive"]
    },
    "distribution-bar": {
      "id": "distribution-bar",
      "name": "Probability Distribution",
      "description": "Bar and area charts for probability distributions",
      "category": "chart",
      "renderer": "distribution-viz",
      "output_format": "canvas",
      "capabilities": ["interactive", "responsive"]
    },
    "logic-flow": {
      "id": "logic-flow",
      "name": "Logical Flow Diagram",
      "description": "Flow diagrams showing logical progression in proofs",
      "category": "flowchart",
      "renderer": "flow-diagram",
      "output_format": "svg",
      "capabilities": ["interactive"]
    }
  },
  "service_extensions": {
    "concept_service": {
      "class_path": "visualverse.engine.content_verticals.math_verse.MathVerseConceptService",
      "module": "math_verse.services",
      "priority": 90,
      "config": {
        "proof_templates": true,
        "step_decomposition": true
      }
    },
    "visual_service": {
      "class_path": "visualverse.engine.content_verticals.math_verse.MathVerseVisualService",
      "module": "math_verse.services",
      "priority": 90,
      "config": {
        "math_renderer": "latex",
        "graphing_engine": "function-plot"
      }
    },
    "reasoning_engine": {
      "class_path": "visualverse.engine.content_verticals.math_verse.MathVerseReasoningEngine",
      "module": "math_verse.services",
      "priority": 90,
      "config": {
        "supported_proofs": ["direct", "induction", "contradiction", "counterexample"]
      }
    }
  },
