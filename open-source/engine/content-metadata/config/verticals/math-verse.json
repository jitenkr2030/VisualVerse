        {
          "id": "expressions",
          "name": "Algebraic Expressions",
          "description": "Working with variables and numerical expressions",
          "concepts": [
            {
              "id": "variables",
              "name": "Variables and Constants",
              "description": "Understanding variables as placeholders for unknown values",
              "visualization_preferences": ["equation-layout", "variable-substitution"],
              "difficulty_score": 0.3
            },
            {
              "id": "exponents",
