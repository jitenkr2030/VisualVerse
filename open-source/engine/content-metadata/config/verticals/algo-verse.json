  "service_extensions": {
    "concept_service": {
      "class_path": "visualverse.engine.content_verticals.algo_verse.AlgoVerseConceptService",
      "module": "algo_verse.services",
      "priority": 85,
      "config": {
        "code_parsing": true,
        "algorithm_classification": true
      }
    },
    "visual_service": {
      "class_path": "visualverse.engine.content_verticals.algo_verse.AlgoVerseVisualService",
      "module": "algo_verse.services",
      "priority": 85,
      "config": {
        "code_renderer": "syntax-highlight",
        "flowchart_renderer": "auto-layout"
      }
    },
    "animation_service": {
      "class_path": "visualverse.engine.content_verticals.algo_verse.AlgoVerseAnimationService",
      "module": "algo_verse.services",
      "priority": 85,
      "config": {
        "step_animation": true,
        "speed_control": true
      }
    }
